<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_border_dialog">

    <TextView
        android:id="@+id/explanationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_share"
        android:gravity="center"
        android:text="@string/explanation_notification"
        android:textColor="@color/textColor" />

    <RelativeLayout
        android:id="@+id/layoutSettingsNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:layout_below="@+id/explanationTextView"
        android:background="@color/colorTransparentBlack">

        <TextView
            android:id="@+id/notifTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_start_footer"
            android:text="@string/notification_settings"
            android:textColor="@color/textColor" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_start_footer"/>

    </RelativeLayout>
</RelativeLayout>